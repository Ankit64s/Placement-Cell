<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bckg"
    android:backgroundTint="#A6FFFFFF"
    android:backgroundTintMode="src_over"
    tools:context=".addcompany">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/start"
        android:text="Add The Company"
        android:textColor="#E91E63"
        android:textAlignment="center"
        android:textSize="22dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/start"
        android:id="@+id/cid"
        android:hint="Enter Company id"
        android:textSize="22dp"
        android:layout_marginTop="8dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cid"
        android:id="@+id/cname"
        android:hint="Enter Company Name"
        android:textSize="22dp"
        android:layout_marginTop="8dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cname"
        android:id="@+id/cpackage"
        android:hint="Enter Company Package"
        android:textSize="22dp"
        android:layout_marginTop="8dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cpackage"
        android:id="@+id/cdate"
        android:hint="Enter Drive Date"
        android:textSize="22dp"
        android:layout_marginTop="8dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cdate"
        android:id="@+id/cven"
        android:hint="Enter Drive Venue"
        android:textSize="22dp"
        android:layout_marginTop="8dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cven"
        android:id="@+id/cother"
        android:hint="Enter Other Details"
        android:textSize="22dp"
        android:layout_marginTop="8dp"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cother"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="85dp"
        android:background="#C8F1C84B"
        android:fontFamily="serif"
        android:textStyle="italic"
        android:text="Add Data"
        android:textSize="22dp"
        android:id="@+id/creg"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>