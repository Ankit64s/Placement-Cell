<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bckg"
    android:backgroundTint="#A6FFFFFF"
    android:backgroundTintMode="src_over"
    tools:context=".addstud">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Register The Student"
                android:textSize="22dp"
                android:textAlignment="center"
                android:textColor="#EB165E"
                android:id="@+id/text1"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1"
                android:hint="Enter Univ Roll"
                android:id="@+id/stroll"
                android:layout_marginTop="20dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/stroll"
                android:hint="Enter Name"
                android:id="@+id/stname"
                android:layout_marginTop="20dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/stname"
                android:hint="Enter Course"
                android:id="@+id/stcourse"
                android:layout_marginTop="20dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/stcourse"
                android:hint="Enter Branch"
                android:id="@+id/stbranch"
                android:layout_marginTop="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/stbranch"
                android:hint="Enter Address"
                android:id="@+id/staddrs"
                android:layout_marginTop="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/staddrs"
                android:hint="Enter Mobile"
                android:id="@+id/stmob"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/regstd"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/stmob"
                android:layout_marginLeft="83dp"
                android:layout_marginTop="27dp"
                android:background="#C8F1C84B"
                android:fontFamily="serif"
                android:text="Add Data"
                android:textSize="22dp"
                android:textStyle="italic" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>