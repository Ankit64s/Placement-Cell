<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bckg"
    android:backgroundTint="#A6FFFFFF"
    android:backgroundTintMode="src_over"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".addspc">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add the SPC"
                android:textSize="22dp"
                android:textColor="#E91E63"
                android:textAlignment="center"
                android:id="@+id/stro"
                android:layout_marginTop="15dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/stro"
                android:id="@+id/spid"
                android:hint="Enter id"
                android:textSize="22dp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spid"
                android:id="@+id/spname"
                android:hint="Enter Name"
                android:textSize="22dp"
                android:layout_marginTop="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spname"
                android:id="@+id/sppwd"
                android:hint="Enter Password"
                android:textSize="22dp"
                android:layout_marginTop="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sppwd"
                android:id="@+id/spmob"
                android:hint="Enter Mobile Number"
                android:textSize="22dp"
                android:layout_marginTop="5dp"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/spmob"
                android:id="@+id/spreg"
                android:text="Add Data"
                android:textSize="22dp"
                android:background="#C8F1C84B"
                android:fontFamily="serif"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="83dp"/>



        </RelativeLayout>
    </ScrollView>

</RelativeLayout>