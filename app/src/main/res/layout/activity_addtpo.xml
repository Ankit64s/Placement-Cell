<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckg"
    android:backgroundTint="#A6FFFFFF"
    android:backgroundTintMode="src_over"
    android:orientation="vertical"
    tools:context=".addtpo">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Register The TPO"
                android:textSize="22dp"
                android:textAlignment="center"
                android:textColor="#EB165E"
                android:id="@+id/text1"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1"
                android:hint="Enter Id"
                android:id="@+id/tpid"
                android:layout_marginTop="20dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tpid"
                android:hint="Enter Name"
                android:id="@+id/tpname"
                android:layout_marginTop="20dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tpname"
                android:hint="Enter Password"
                android:id="@+id/tppwd"
                android:layout_marginTop="20dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tppwd"
                android:hint="Enter Mobile Number"
                android:id="@+id/tpmob"
                android:layout_marginTop="20dp" />
            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="83dp"
                android:background="#C8F1C84B"
                android:fontFamily="serif"
                android:textStyle="italic"
                android:layout_marginTop="24dp"
                android:layout_below="@id/tpmob"
                android:id="@+id/regtpo"
                android:text="Add Data"
                android:textSize="22dp"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>