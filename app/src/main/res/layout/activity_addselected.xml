<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckg"
    android:backgroundTint="#A6FFFFFF"
    android:backgroundTintMode="src_over"
    android:orientation="vertical"
    tools:context=".addselected">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Selected Students"
                android:textSize="22dp"
                android:textAlignment="center"
                android:textColor="#E91E63"
                android:layout_marginTop="10dp"
                android:id="@+id/str"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:hint="Enter Univ Roll"
                android:layout_below="@id/str"
                android:id="@+id/selroll"
                android:layout_marginTop="5dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:hint="Enter Name"
                android:layout_below="@id/selroll"
                android:id="@+id/selname"
                android:layout_marginTop="5dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/selname"
                android:id="@+id/comp1"
                android:hint="Company 1"
                android:textSize="22dp"
                android:layout_marginTop="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/comp1"
                android:id="@+id/pack1"
                android:hint="Package"
                android:textSize="22dp"
                android:layout_marginTop="5dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pack1"
                android:id="@+id/comp2"
                android:hint="Company 2"
                android:textSize="22dp"
                android:layout_marginTop="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/comp2"
                android:id="@+id/pack2"
                android:hint="Package"
                android:textSize="22dp"
                android:layout_marginTop="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pack2"
                android:id="@+id/selmob"
                android:hint="Mobile"
                android:textSize="22dp"
                android:layout_marginTop="5dp"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/selreg"
                android:background="#C8F1C84B"
                android:fontFamily="serif"
                android:textStyle="italic"
                android:layout_below="@id/selmob"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="83dp"
                android:text="Add Data"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/selreg"
                android:text="Please fill NA in extra fields"
                android:textSize="22dp"
                android:layout_marginTop="10dp"
                android:textColor="#F01212"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>