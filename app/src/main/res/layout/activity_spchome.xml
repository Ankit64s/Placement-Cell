<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckg"
    android:backgroundTint="#A6FFFFFF"
    android:backgroundTintMode="src_over"
    android:orientation="vertical"
    tools:context=".spchome">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/uyt"
                android:text="Welcome SPC"
                android:textSize="22dp"
                android:textColor="#E91E63"
                android:textAlignment="center"
                android:layout_marginTop="25dp"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/uyt"
                android:id="@+id/addsst"
                android:background="#C8F1C84B"
                android:fontFamily="serif"
                android:textStyle="italic"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="83dp"
                android:text="Add Selected Student"
                android:textSize="22dp"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/addsst"
                android:id="@+id/addcomp"
                android:background="#C8F1C84B"
                android:fontFamily="serif"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="83dp"
                android:text="Add Company"
                android:textSize="22dp"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/addcomp"
                android:id="@+id/viewsel"
                android:text="View Selected Students"
                android:textSize="22dp"
                android:background="#C8F1C84B"
                android:fontFamily="serif"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="83dp"/>

            <Button
                android:id="@+id/viewcomp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewsel"
                android:layout_marginLeft="83dp"
                android:layout_marginTop="15dp"
                android:background="#C8F1C84B"
                android:fontFamily="serif"
                android:textStyle="italic"
                android:text="View Companies"
                android:textSize="22dp" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>