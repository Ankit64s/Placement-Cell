<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bckg"
    android:backgroundTint="#A6FFFFFF"
    android:backgroundTintMode="src_over"
    android:layout_height="match_parent"
    tools:context=".Student">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trty"
        android:text="Welcome to Students Page"
        android:textSize="22dp"
        android:textAlignment="center"
        android:textColor="#E91E63"
        android:layout_marginTop="35dp"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/trty"
        android:id="@+id/vstu"
        android:text="View Selected Students"
        android:textSize="22dp"
        android:background="#C8F1C84B"
        android:fontFamily="serif"
        android:textStyle="italic"
        android:textAlignment="center"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="83dp"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/vstu"
        android:id="@+id/vcom"
        android:text="View Companies"
        android:textSize="22dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="83dp"
        android:background="#C8F1C84B"
        android:fontFamily="serif"
        android:textStyle="italic"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/vcom"
        android:id="@+id/vappl"
        android:text="Apply For Drives"
        android:textSize="22dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="83dp"
        android:background="#C8F1C84B"
        android:fontFamily="serif"
        android:textStyle="italic"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/vappl"
        android:id="@+id/shwsp"
        android:text="View Spc"
        android:textSize="22dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="83dp"
        android:background="#C8F1C84B"
        android:fontFamily="serif"
        android:textStyle="italic"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/shwsp"
        android:id="@+id/shwtpo"
        android:text="View TPO"
        android:textSize="22dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="83dp"
        android:background="#C8F1C84B"
        android:fontFamily="serif"
        android:textStyle="italic"/>

</RelativeLayout>