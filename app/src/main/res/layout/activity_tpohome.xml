<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bckg"
    android:backgroundTint="#A6FFFFFF"
    android:backgroundTintMode="src_over"
    android:layout_height="match_parent"
    tools:context=".tpohome">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome TPO"
        android:textSize="22dp"
        android:textColor="#E91E63"
        android:id="@+id/wel"
        android:layout_marginTop="25dp"
        android:textAlignment="center"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="83dp"
        android:background="#C8F1C84B"
        android:fontFamily="serif"
        android:textStyle="italic"
        android:layout_marginTop="60dp"
        android:text="Add Company"
        android:textSize="22dp"
        android:layout_below="@id/wel"
        android:id="@+id/addco"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="83dp"
        android:background="#C8F1C84B"
        android:fontFamily="serif"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:text="Add Student"
        android:textSize="22dp"
        android:layout_below="@id/addco"
        android:id="@+id/addstu"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="83dp"
        android:background="#C8F1C84B"
        android:fontFamily="serif"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:text="Add Selected Student"
        android:textSize="22dp"
        android:layout_below="@id/addstu"
        android:id="@+id/addsel"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="83dp"
        android:background="#C8F1C84B"
        android:fontFamily="serif"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:text="Add SPC"
        android:textSize="22dp"
        android:layout_below="@id/addsel"
        android:id="@+id/addspc"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="83dp"
        android:background="#C8F1C84B"
        android:fontFamily="serif"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:text="View Company"
        android:textSize="22dp"
        android:layout_below="@id/addspc"
        android:id="@+id/vicom"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="83dp"
        android:background="#C8F1C84B"
        android:fontFamily="serif"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:text="View Student"
        android:textSize="22dp"
        android:layout_below="@id/vicom"
        android:id="@+id/vistu"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="83dp"
        android:background="#C8F1C84B"
        android:fontFamily="serif"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:text="View Selected Student"
        android:textSize="22dp"
        android:layout_below="@id/vistu"
        android:id="@+id/visel"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="83dp"
        android:background="#C8F1C84B"
        android:fontFamily="serif"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:text="View SPC"
        android:textSize="22dp"
        android:layout_below="@id/visel"
        android:id="@+id/vispc"/>

</RelativeLayout>