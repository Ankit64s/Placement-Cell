<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bckg"
    android:backgroundTint="#A6FFFFFF"
    android:backgroundTintMode="src_over"
    tools:context=".ViewStudent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Students"
                android:textSize="22dp"
                android:textColor="#E91E63"
                android:id="@+id/sret"
                android:textAlignment="center"
                android:layout_marginTop="16dp"/>
            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/sret"
                android:id="@+id/selid"
                android:hint="Enter Roll No"
                android:textSize="22dp"
                android:layout_marginTop="10dp"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/sret"
                android:layout_marginLeft="200dp"
                android:id="@+id/selfetc"
                android:text="Fetch"
                android:background="#C8F1C84B"
                android:fontFamily="serif"
                android:textStyle="italic"
                android:textSize="22dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/selid"
                android:layout_marginTop="10dp"
                android:textSize="22dp"
                android:text="Name"
                android:textColor="#2196F3"
                android:textAlignment="center"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/selid"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="200dp"
                android:id="@+id/selename"
                android:textSize="22dp"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/selename"
                android:layout_marginTop="10dp"
                android:textSize="22dp"
                android:text="Course"
                android:textColor="#2196F3"
                android:textAlignment="center"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/selename"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="200dp"
                android:id="@+id/selcomp1"
                android:textSize="22dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/selcomp1"
                android:layout_marginTop="10dp"
                android:textSize="22dp"
                android:text="Branch"
                android:textColor="#2196F3"
                android:textAlignment="center"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/selcomp1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="200dp"
                android:id="@+id/selpack1"
                android:textSize="22dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/selpack1"
                android:layout_marginTop="10dp"
                android:textSize="22dp"
                android:text="Address"
                android:textColor="#2196F3"
                android:textAlignment="center"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/selpack1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="200dp"
                android:id="@+id/selcomp2"
                android:textSize="22dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/selcomp2"
                android:layout_marginTop="10dp"
                android:textSize="22dp"
                android:text="Mobile"
                android:textColor="#2196F3"
                android:textAlignment="center"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/selcomp2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="200dp"
                android:id="@+id/selpack2"
                android:textSize="22dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/stup"
                android:text="Note: Null Responses indicate that this Roll No has not been added yet."
                android:textSize="22dp"
                android:id="@+id/hjuy"
                android:textColor="#D61A0C"
                android:layout_marginTop="25dp"
                android:textAlignment="center"/>
            <Button
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textSize="22dp"
                android:background="#C8F1C84B"
                android:fontFamily="serif"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:layout_below="@id/selpack2"
                android:id="@+id/stup"/>

            <Button
                android:layout_width="190dp"
                android:layout_marginLeft="205dp"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textSize="22dp"
                android:background="#C8F1C84B"
                android:fontFamily="serif"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:layout_below="@id/selpack2"
                android:id="@+id/stdel"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/hjuy"
                android:text="Note: In this you can only fetch, update and delete existing records. To add any new record go back and use button Add STUDENT."
                android:textSize="22dp"
                android:textColor="#D61A0C"
                android:layout_marginTop="25dp"
                android:textAlignment="center"/>





        </RelativeLayout>
    </ScrollView>

</RelativeLayout>