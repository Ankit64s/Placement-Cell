<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bckg"
    android:backgroundTint="#A6FFFFFF"
    android:backgroundTintMode="src_over"
    tools:context=".ViewTpo">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tryi"
                android:text="View TPO Here"
                android:textAlignment="center"
                android:textSize="22dp"
                android:layout_marginTop="15dp"
                android:textColor="#E91E63"/>
            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tryi"
                android:id="@+id/idspc"
                android:hint="Enter TPO ID"
                android:textSize="22dp"
                android:layout_marginTop="20dp"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tryi"
                android:id="@+id/fetspc"
                android:textSize="22dp"
                android:background="#C8F1C84B"
                android:fontFamily="serif"
                android:textStyle="italic"
                android:text="Fetch"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="200dp"/>
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="22dp"
                android:textColor="#2196F3"
                android:textAlignment="center"
                android:layout_below="@id/idspc"
                android:layout_marginTop="10dp"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/idspc"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="200dp"
                android:textSize="22dp"
                android:textAlignment="center"
                android:id="@+id/namesp"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="22dp"
                android:textColor="#2196F3"
                android:textAlignment="center"
                android:layout_below="@id/namesp"
                android:layout_marginTop="10dp"/>
            <CheckBox android:id="@+id/show"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="155dp"
                android:checked="false"
                android:layout_below="@+id/namesp"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/namesp"
                android:layout_marginTop="10dp"
                android:password="true"
                android:layout_marginLeft="200dp"
                android:textSize="22dp"
                android:textAlignment="center"
                android:id="@+id/pwdsp"/>
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Mobile"
                android:textSize="22dp"
                android:textColor="#2196F3"
                android:textAlignment="center"
                android:layout_below="@id/pwdsp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/pwdsp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="200dp"
                android:textSize="22dp"
                android:textAlignment="center"
                android:id="@+id/mobsp"/>
            <Button
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Update"
                android:background="#C8F1C84B"
                android:fontFamily="serif"
                android:textStyle="italic"
                android:textAlignment="center"
                android:textSize="22dp"
                android:layout_below="@id/mobsp"
                android:id="@+id/spcup"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:background="#C8F1C84B"
                android:fontFamily="serif"
                android:textStyle="italic"
                android:layout_marginLeft="200dp"
                android:textAlignment="center"
                android:textSize="22dp"
                android:layout_below="@id/mobsp"
                android:id="@+id/spcdel"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spcdel"
                android:text="Note: In this you can only fetch, update and delete existing records. To add any new record go back and use button Add TPO."
                android:textSize="22dp"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:textColor="#E62929"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>