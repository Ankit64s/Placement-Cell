<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bckg"
    android:backgroundTint="#A6FFFFFF"
    android:backgroundTintMode="src_over"
    android:layout_height="match_parent"
    tools:context=".ViewCompany">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Companies"
                android:textSize="22dp"
                android:textColor="#E91E63"
                android:id="@+id/sret"
                android:textAlignment="center"
                android:layout_marginTop="16dp"/>
            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/sret"
                android:id="@+id/comid"
                android:hint="Enter Co. Code"
                android:textSize="22dp"
                android:layout_marginTop="10dp"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/sret"
                android:layout_marginLeft="200dp"
                android:id="@+id/comfetc"
                android:background="#C8F1C84B"
                android:fontFamily="serif"
                android:textStyle="italic"
                android:text="Fetch"
                android:textSize="22dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/comid"
                android:layout_marginTop="10dp"
                android:textSize="22dp"
                android:text="Name"
                android:textColor="#2196F3"
                android:textAlignment="center"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/comid"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="200dp"
                android:id="@+id/comname"
                android:textSize="22dp"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/comname"
                android:layout_marginTop="10dp"
                android:textSize="22dp"
                android:text="Package"
                android:textColor="#2196F3"
                android:textAlignment="center"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/comname"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="200dp"
                android:id="@+id/compack"
                android:textSize="22dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/compack"
                android:layout_marginTop="10dp"
                android:textSize="22dp"
                android:text="Date"
                android:textColor="#2196F3"
                android:textAlignment="center"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/compack"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="200dp"
                android:id="@+id/comdate"
                android:textSize="22dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/comdate"
                android:layout_marginTop="10dp"
                android:textSize="22dp"
                android:text="Venue"
                android:textColor="#2196F3"
                android:textAlignment="center"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/comdate"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="200dp"
                android:id="@+id/comven"
                android:textSize="22dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/comven"
                android:layout_marginTop="10dp"
                android:textSize="22dp"
                android:text="Other"
                android:textColor="#2196F3"
                android:textAlignment="center"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/comven"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="200dp"
                android:id="@+id/comoth"
                android:textSize="22dp"
                android:textAlignment="center"/>
            <Button
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comoth"
                android:id="@+id/comup"
                android:text="Update"
                android:background="#C8F1C84B"
                android:fontFamily="serif"
                android:textStyle="italic"
                android:textSize="22dp"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/comdel"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comoth"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="18dp"
                android:text="Delete"
                android:background="#C8F1C84B"
                android:fontFamily="serif"
                android:textStyle="italic"
                android:textSize="22dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/comup"
                android:id="@+id/teste"
                android:text="Note: Company Codes are like C1,C2,C3..... so check with it until you get null entries."
                android:textSize="22dp"
                android:textColor="#D61A0C"
                android:layout_marginTop="25dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/teste"
                android:text="Note: Null Responses indicate that this Company Code has not been added for drive yet."
                android:textSize="22dp"
                android:textColor="#D61A0C"
                android:id="@+id/tyuio"
                android:layout_marginTop="25dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tyuio"
                android:textSize="22dp"
                android:textColor="#D61A0C"
                android:textAlignment="center"
                android:text="Note: In this you can only fetch, update and delete existing records. To add any new record go back and use button Add Company."/>




        </RelativeLayout>
    </ScrollView>

</RelativeLayout>