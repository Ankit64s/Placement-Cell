<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bckg"
    android:backgroundTint="#A6FFFFFF"
    android:backgroundTintMode="src_over"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Spc">
    <EditText android:id="@+id/edit1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="User Id"/>
    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Fetch"
        android:background="#C8F1C84B"
        android:fontFamily="serif"
        android:textStyle="italic"
        android:textSize="22dp"
        android:layout_marginLeft="220dp"
        android:id="@+id/fetci"/>
    <TextView android:id="@+id/edit3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/edit1"
        android:textSize="22dp"/>

    <EditText android:id="@+id/edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Password"
        android:password="true"
        android:layout_below="@+id/edit3"/>

    <CheckBox android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:checked="false"
        android:text="Show Password"
        android:layout_below="@+id/edit2"/>

    <Button android:textSize="22dp"
        android:textColor="#5497cc"
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#C8F1C84B"
        android:fontFamily="serif"
        android:textStyle="italic"
        android:text="LOGIN"
        android:layout_below="@+id/show"/>


</RelativeLayout>